{
  "name": "vindi/vindi-magento",
  "description": "Testes do mÃ³dulo Vindi para magento >1.7.x e <1.9.x",
  "keywords": [
    "vindi",
    "vindi-magento",
    "vindi-magento-module"
  ],
  "homepage": "https://github.com/vindi/vindi-magento",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Vindi",
      "email": "comunidade@vindi.com.br",
      "homepage": "https://www.vindi.com.br/"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/magento/marketplace-eqp.git"
    }
  ],
  "require": {
    "magium/magento": ">=0.0.22 <2.0.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "2.6.2",
    "magento/marketplace-eqp": "^1.0.5"
  },
  "autoload": {
    "psr-4": {
      "VindiTest\\": "VindiTest",
      "Vindi\\": "Vindi"
    },
    "files": [
      "register.php",
      "Vindi/VindiLoader.php"
    ]
  },
  "scripts": {
    "test": "vendor/bin/phpunit --verbose",
    "style": "vendor/bin/phpcs  -p --colors --standard=MEQP1 --ignore=*/tests/* --severity=10 --extensions=php,phtml ../../Subscription/",
    "fix": "vendor/bin/phpcbf -w --standard=MEQP1 --ignore=*/tests/* --severity=10 ../../Subscription/ --no-patch",
    "post-install-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/magento/marketplace-eqp",
    "post-update-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/magento/marketplace-eqp"
  }
}
